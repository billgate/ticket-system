<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>HelpDesk</title>
    <link type="text/css" rel="stylesheet" href="/bower/bootstrap/dist/css/bootstrap.min.css" />
    <link type="text/css" rel="stylesheet" href="/bower/font-awesome/css/font-awesome.min.css" />
    <link type="text/css" rel="stylesheet" href="/stylesheets/style.css" />
    <link type="text/css" rel="stylesheet" href="/stylesheets/style.css" />
</head>
<body ng-app="ticketSystem">
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#/">HelpDesk</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <%if(user) {%>
                    <li><a href="#/">Tickets</a></li>
                    <li><a href="#/ticket/new">New Ticket</a></li>
                <%}%>
            </ul>
            <%if(user){%>
            <ul class="nav navbar-nav navbar-right" style="margin-right: 5px;">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                        <i class="fa fa-user"></i>
                        <%=user.username%>
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="/users/logout">Log Off</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <%}%>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div class="container">
    <% if(success_msg && success_msg.length !== 0) {%>
        <div class="alert alert-success"><%=success_msg%></div>
     <%}%>
    <% if(error_msg && error_msg.length !== 0) {%>
    <div class="alert alert-danger"><%=error_msg%></div>
    <%}%>
    <flash-message></flash-message>
</div>
<%- body %>
<script src="/bower/jquery/dist/jquery.js"></script>
<script src="/bower/bootstrap/dist/js/bootstrap.js"></script>
<script src="/bower/angular/angular.min.js" type="application/javascript"></script>
<script src="/bower/angular-route/angular-route.min.js" type="application/javascript"></script>
<script src='/bower/textAngular/dist/textAngular-rangy.min.js'></script>
<script src='/bower/textAngular/dist/textAngular-sanitize.min.js'></script>
<script src='/bower/textAngular/dist/textAngular.min.js'></script>
<script src="/javascripts/angular-grid.js" type="application/javascript"></script>
<script src="/bower/angular-flash-alert/dist/angular-flash.min.js"></script>
<script src="/javascripts/app.js" type="application/javascript"></script>
<script src="/javascripts/services/TicketsService.js" type="application/javascript"></script>
<script src="/javascripts/services/CommonService.js" type="application/javascript"></script>
<script src="/javascripts/controllers/TicketsCtrl.js" type="application/javascript"></script>
<script src="/javascripts/controllers/NewTicketCtrl.js" type="application/javascript"></script>
<script src="/javascripts/controllers/ViewTicketCtrl.js" type="application/javascript"></script>
<script src="/javascripts/controllers/EditTicketCtrl.js" type="application/javascript"></script>
</body>
</html>